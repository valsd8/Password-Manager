<Window x:Class="Password_Manager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PasswordManager.ViewModel"
        xmlns:views="clr-namespace:PasswordManager.View"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Password Manager" Height="450" Width="800">

    <Window.Resources>
        
        <DataTemplate DataType="{x:Type vm:EnterPasswordViewModel}">
            <views:EnterPasswordView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CreateDbViewModel}">
            <views:CreateDbView />
        </DataTemplate>
    </Window.Resources>

    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>

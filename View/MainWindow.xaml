<Window x:Class="PasswordManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PasswordManager.ViewModel"
        xmlns:views="clr-namespace:PasswordManager.View"
       
        
        Title="Password Manager" Height="450" Width="800">
    <Window.Icon>
        <DrawingImage>
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="#2196F3">
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="8,8" RadiusX="8" RadiusY="8"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Icon>
    <Window.Resources>
        
        <DataTemplate DataType="{x:Type vm:EnterPasswordViewModel}">
            <views:EnterPasswordView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CreateDbViewModel}">
            <views:CreateDbView />
        </DataTemplate>
    </Window.Resources>

    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
